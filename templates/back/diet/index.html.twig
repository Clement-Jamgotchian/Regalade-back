{% extends 'base.html.twig' %}

{% block title %}régimes{% endblock %}

{% block body %}
    <h1 class="text-primary fw-bold">Les régimes</h1>

    <table class="table table-primary table-striped-columns text-center align-middle">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Créé le</th>
                <th>Modifié</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for diet in diets %}
            <tr>
                <td>{{ diet.id }}</td>
                <td>{{ diet.name }}</td>
                <td>{{ diet.createdAt ? diet.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ diet.updatedAt ? diet.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a class="btn btn-primary" href="{{ path('app_back_diet_show', {'id': diet.id}) }}">voir</a>
                    <a class="btn btn-warning" href="{{ path('app_back_diet_edit', {'id': diet.id}) }}">editer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Pas de régime dans la base</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('app_back_diet_new') }}">Créer un nouveau régime</a>
{% endblock %}
