{% extends 'base.html.twig' %}

{% block title %}Recipe{% endblock %}

{% block body %}
    <h1>Recipe</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ recipe.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ recipe.description }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ recipe.picture }}</td>
            </tr>
            <tr>
                <th>CookingDuration</th>
                <td>{{ recipe.cookingDuration }}</td>
            </tr>
            <tr>
                <th>SetupDuration</th>
                <td>{{ recipe.setupDuration }}</td>
            </tr>
            <tr>
                <th>Step</th>
                <td>{{ recipe.step }}</td>
            </tr>
            <tr>
                <th>Difficulty</th>
                <td>{{ recipe.difficulty }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ recipe.rating }}</td>
            </tr>
            <tr>
                <th>Portions</th>
                <td>{{ recipe.portions }}</td>
