{% extends 'base.html.twig' %}

{% block title %}{{department.name}}{% endblock %}

{% block body %}
    <h1 class="text-primary fw-bold">{{department.name}}</h1>

    <table class="table table-primary table-striped-columns text-center">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ department.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ department.name }}</td>
            </tr>
            <tr>
                <th>Crée le</th>
                <td>{{ department.createdAt ? department.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modifié le</th>
                <td>{{ department.updatedAt ? department.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary mb-3" href="{{ path('app_back_department_index') }}">Retour</a>

    <a class="btn btn-warning mb-3" href="{{ path('app_back_department_edit', {'id': department.id}) }}">Editer</a>

    {{ include('back/department/_delete_form.html.twig') }}
{% endblock %}
