{% extends 'base.html.twig' %}

{% block title %}{{allergen.name}}{% endblock %}

{% block body %}
     <h1 class="text-primary fw-bold">{{allergen.name}}</h1>

    <table class="table table-primary table-striped-columns text-center">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ allergen.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ allergen.name }}</td>
            </tr>
            <tr>
                <th>Créée le</th>
                <td>{{ allergen.createdAt ? allergen.createdAt|date('d-m-Y H:i:s') : '/' }}</td>
            </tr>
            <tr>
                <th>Modifiée le</th>
                <td>{{ allergen.updatedAt ? allergen.updatedAt|date('d-m-Y H:i:s') : '/' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary mb-3" href="{{ path('app_back_allergen_index') }}">Retour</a>

    <a class="btn btn-warning mb-3" href="{{ path('app_back_allergen_edit', {'id': allergen.id}) }}">Editer</a>

    {{ include('back/allergen/_delete_form.html.twig') }}
{% endblock %}
