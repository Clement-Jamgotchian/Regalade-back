{% extends 'base.html.twig' %}

{% block title %}Commentaire de {{comment.user.nickname}}{% endblock %}

{% block body %}
    <h1 class="text-primary fw-bold">Commentaire de {{comment.user.nickname}}</h1>
    <h2>sur : <span class="fst-italic">{{comment.recipe.title}}</span></h2>

    <table class="mt-3 table table-primary table-striped-columns text-center align-middle">
        <thead>
            <tr>
                <th>Auteur</th>
                <th>Date</th>
                <th>Recette</th>
                <th>Note</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>{{comment.user.nickname}}</td>
                <td>{{ comment.createdAt ? comment.createdAt|date('d-m-Y H:i:s') : '/' }}</td>
                <td>{{ comment.recipe.title }}</td>
                <td>{{ comment.rating ?? "Non not√©" }}</td>
            </tr>
        </tbody>
    </table>
    <div></div>
    <table class="mt-3 table table-primary table-striped-columns text-center align-middle">
        <thead>
            <th>Commentaire</th>
        </thead>
        <tbody>
            <tr>
                <td>{{comment.content}}</td>
            </tr>
        </tbody>
    </table>
    <div class="row">
    <div class="col-6">{{ include('back/comment/_delete_form.html.twig') }}</div>
    <div class="col-6"><a class="btn btn-success" href="{{ path('app_back_comment_validate', {'id': comment.id}) }}">Valider</a></div>
    </div>
    
    <a class="mt-3 col-3 btn btn-primary" href="{{ path('app_back_comment_index') }}">Retour</a>
    
{% endblock %}
