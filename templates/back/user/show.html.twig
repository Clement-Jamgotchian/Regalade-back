{% extends 'base.html.twig' %}

{% block title %}Page utilisateur{% endblock %}

{% block body %}
    <h1 class="text-primary fw-bold">{{user.nickname}}</h1>

    <table class="table table-primary table-striped-columns text-center">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{% if "ROLE_ADMIN" in user.roles %} Admin {% else %} Utilisateur {% endif %}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ user.nickname }}</td>
            </tr>
            <tr>
                <th>Photo de profil</th>
                <td>{% if user.picture is not null %}<img src="{{ asset(user.picture) }}" class="img-thumbnail" style="width: 18rem;" alt="">{% else %} Pas d'image{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <a class="col-4 float-end btn btn-primary" href="{{ path('app_back_user_index') }}">Retour</a>

    <a class="col-4 float-start btn btn-warning" href="{{ path('app_back_user_edit', {'id': user.id}) }}">Editer</a>

    {{ include('back/user/_delete_form.html.twig') }}
{% endblock %}
